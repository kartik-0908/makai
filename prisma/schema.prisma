generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assessment {
  id           String   @id
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  type         String
  status       String
  daysUntilDue Int?
  items        Json
  patientId    String
  Patient      Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Patient {
  id         String       @id
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  name       String
  phone      String?
  age        Int
  address    String?
  imageUrl   String?
  gender     Gender       @default(MALE)
  status     Status       @default(ACTIVE)
  Assessment Assessment[]
}

enum Gender {
  MALE
  FEMALE
  UNSPECIFIED
}

enum Status {
  ACTIVE
  INACTIVE
}
